<div class="cointainer-fluid p-3 p-3">
  <div class="row">
    <div class="col-3">
      <div class="mt-5">
        <%= render 'form', room: Room.new %>
      </div>
      <hr>
      <% @rooms.each do |room| %>
        <%= link_to room_path(room.id) do %>
          <div class="card mb-1">
            <div class="card-body">
              <%= room.name %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="col-9">
      <% if @room.present? %>
        <div class="chat-room">
          <nav class="navbar navbar-light bg-light mb-3">
            <b class="navbar-brand"><%= @room.name %></b>
            <ul class="navbar-nav">
              <li class="nav-item">
                Hi,
                <b class="text-success"><%= current_user.user_name %></b>
              </li>
            </ul>
          </nav>

          <% @room.messages.includes(:user).each do |message| %>
            <div class="message mb-3 <%= "me" if message.user == current_user %>">
              <div class="content-container">
                <div class="content">
                  <span><%= message.body %></span>
                </div>

                <div class="sender text-success">
                  <%= message.user.user_name %>
                </div>
              </div>
            </div>
          <% end %>

          <div class="chat-box p-1">
            <%= render 'messages/form', room: @room, message: Message.new %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
