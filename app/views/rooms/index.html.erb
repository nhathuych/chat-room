<div class="cointainer-fluid p-3 p-3">
  <div class="row">
    <div class="col-3">
      <p>Hi, <%= current_user.user_name %></p>
      <%= render 'form', room: Room.new %>
      <hr>
      <% @rooms.each do |room| %>
        <%= link_to room_path(room.id) do %>
          <div class="card mb-1">
            <div class="card-body">
              <%= room.name %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="col-9">
      <% if @room.present? %>
        <div class="chat-room">
          <p><%= @room.name %></p>

          <% @room.messages.each do |message| %>
            <p><%= message.body %></p>
          <% end %>

          <div class="chat-box p-1">
            <%= render 'messages/form', room: @room, message: Message.new %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
